		:javascript
			$(document).ready(function() {
				$("ul.row").click(function () {
					$(this).toggleClass("active");
				});

				$("span.detail").click(function () {
					$(this).toggleClass("slide");

					$("div.next").toggleClass("visible");

					$("div.prev").toggleClass("visible");
				});

				$("div.layout-button").click(function () {
					$("ul.row").toggleClass("wide");
				});

				$("li#people-link").click(function () {
					$("div#people").toggleClass("hidden");
				});

				$("ul.row li").click(function () {
					$(this).toggleClass("active");
				});
			});
